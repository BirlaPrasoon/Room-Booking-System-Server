<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Granter</servlet-name>
        <servlet-class>Servlets.Granter</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Requester</servlet-name>
        <servlet-class>Servlets.Requester</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SubmitRequestServlet</servlet-name>
        <servlet-class>Servlets.SubmitRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>Servlets.RoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelRequestServlet</servlet-name>
        <servlet-class>Servlets.CancelRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimelineServlet</servlet-name>
        <servlet-class>Servlets.TimelineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRequestStatus</servlet-name>
        <servlet-class>Servlets.ServletRequestStatus</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>ServletRequestStatus</servlet-name>
        <url-pattern>/setStatus</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TimelineServlet</servlet-name>
        <url-pattern>/timeline</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelRequestServlet</servlet-name>
        <url-pattern>/cancellable</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SubmitRequestServlet</servlet-name>
        <url-pattern>/submitRequest</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RoomServlet</servlet-name>
        <url-pattern>/room</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Granter</servlet-name>
        <url-pattern>/granter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Requester</servlet-name>
        <url-pattern>/requesterhistory</url-pattern>
    </servlet-mapping>

</web-app>